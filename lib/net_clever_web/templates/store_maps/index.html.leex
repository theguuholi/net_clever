  <div class="row">
    <div class="col s2" id="mapping">
      <ul phx-update="append" id="stores-menu" class="collection">
        <%= for store <- @stores do %>
        <li id="store-<%= store.id %>" class="collection-item <%= if @selected_store == store, do: 'active' %>" >
          <a href="#" id="select-store-<%= store.id %>" phx-click="select-store"
            phx-value-id="<%= store.id %>">
            <%= store.name %>
          </a>
        </li>
        <% end %>
      </ul>
    </div>


    <div class="main col s10">
      <div class="wrapper" phx-update="ignore" id="store-maps">
        <div id="map" phx-hook="StoreMap" data-stores="<%= Jason.encode!(@stores) %>"></div>
      </div>
    </div>

  </div>
