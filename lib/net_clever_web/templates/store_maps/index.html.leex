  <div class="row">
    <div class="col s2" id="mapping">
      <ul phx-update="append" id="stores-menu">
        <%= for store <- @stores do %>
        <li id="store-<%= store.id %>">
          <a href="#" class="store <%= if @selected_store == store, do: 'selected' %>" phx-click="select-store"
            phx-value-id="<%= store.id %>">
            <%= store.name %>
          </a>
        </li>
        <% end %>
      </ul>
    </div>


    <div class="main col s10">
      <div class="wrapper" phx-update="ignore" id="store-maps">
        <div id="map" phx-hook="StoreMap" data-stores="<%= Jason.encode!(@stores) %>"></div>
      </div>
    </div>

  </div>
